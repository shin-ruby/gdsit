<div class="depot_form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend>管理员登录：</legend>
        <div>
          <label for="name">用户名:</label>
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div>
          <label for="password">密码:</label>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
          <%= submit_tag "登录" %>
        </div>
      </fieldset>
  <% end %>
</div>